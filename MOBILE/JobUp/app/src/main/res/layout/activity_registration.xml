<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.workup.jobup.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_foto"
            android:layout_width="@dimen/mediun_image_size"
            android:layout_height="@dimen/mediun_image_size"
            android:layout_gravity="center_horizontal"
            android:alpha="0.4"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/black_overlay"
            android:clickable="true"
            android:paddingBottom="@dimen/standard_margin"
            android:src="@drawable/camera_48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name" />

        <EditText
            android:id="@+id/edt_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="@string/email" />

        <EditText
            android:id="@+id/edt_txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/phone" />

        <EditText
            android:id="@+id/edt_txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cpf" />

        <EditText
            android:id="@+id/edt_txt_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="###.###.###-##"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/rg" />

        <EditText
            android:id="@+id/edt_txt_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/address1" />

        <EditText
            android:id="@+id/edt_txt_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/address2" />

        <EditText
            android:id="@+id/edt_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/zip_code" />

        <EditText
            android:id="@+id/edt_zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/zip_code_format"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/birthday" />

        <EditText
            android:id="@+id/edt_txt_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_format"
            android:inputType="phone"
            android:layout_marginBottom="@dimen/standard_margin"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_professional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/professional"
            android:textColor="@color/icons"
            android:layout_marginBottom="@dimen/standard_margin"/>

    </LinearLayout>
</ScrollView>
